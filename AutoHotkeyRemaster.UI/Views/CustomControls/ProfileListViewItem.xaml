<UserControl x:Class="AutoHotkeyRemaster.WPF.Views.CustomControls.ProfileListViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoHotkeyRemaster.WPF.Views.CustomControls"
             mc:Ignorable="d"   
             Focusable="False"        
             PreviewMouseDoubleClick="OnDoubleClick"
             d:DesignHeight="450" d:DesignWidth="800">
  
    <TextBlock 
        x:Name="txtBlock"    
        Width="230"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"        
        Style="{StaticResource DefaultFontStyle}" 
        Text="{Binding ProfileName, Mode=TwoWay, FallbackValue='err'}" 
        TextAlignment="Left" TextWrapping="Wrap" />

</UserControl>
