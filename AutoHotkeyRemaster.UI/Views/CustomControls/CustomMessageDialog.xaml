<Window x:Class="AutoHotkeyRemaster.WPF.Views.CustomControls.CustomMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoHotkeyRemaster.WPF.Views.CustomControls"
        mc:Ignorable="d"
        Width="250" Height="120"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="CustomMessageDialog" >
    <Grid>
        <StackPanel 
            Background="{StaticResource DefaultBackgroundBrush}">
            <TextBlock 
                x:Name="DialogMessage"
                HorizontalAlignment="Center"
                Margin="0 20 0 0"
                Text="Are you sure to delete?"
                Style="{StaticResource DefaultFontStyle}" TextWrapping="Wrap"/>

            <StackPanel 
                Margin="0 30 0 0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Button 
                    Content="OK"
                    Width="80" Height="30"
                    Click="OnOkClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
