<mah:MetroWindow x:Class="AutoHotkeyRemaster.WPF.Views.ProfileEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Profile Editor"
        WindowTransitionsEnabled="False"
        ResizeMode="NoResize"
        TitleBarHeight="25"
        Height="180" Width="280">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{StaticResource DefaultBackgroundColor}" />
        </Grid.Background>

        <StackPanel
            HorizontalAlignment="Center"
            >
            <TextBlock 
                Margin="0 10 0 5"
                Text="Change Profile Name "
                Style="{StaticResource DefaultFontStyle}" />
            <Border
                BorderThickness="1"
                BorderBrush="White"
                Margin="0 0 0 15" />

            <TextBox
                x:Name="ProfileName"
                Style="{StaticResource DefaultStyleForTextBox}"
                HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
